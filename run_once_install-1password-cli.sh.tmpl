#!/bin/bash
# 1Password CLI 安装脚本
# 在 Linux 上通过官方 APT 仓库安装，macOS 通过 Homebrew 处理

{{- if and (hasKey . "features") .features.enable_1password }}
{{- if eq .chezmoi.os "linux" }}

set -euo pipefail

echo "🔐 安装 1Password CLI (Linux)..."

# 检查是否已安装
if command -v op >/dev/null 2>&1; then
    echo "✅ 1Password CLI 已安装: $(op --version)"
    exit 0
fi

# 获取系统架构
ARCH=$(dpkg --print-architecture 2>/dev/null || echo "amd64")

# 添加 1Password APT 仓库的 GPG 密钥
echo "📥 添加 1Password GPG 密钥..."
curl -sS https://downloads.1password.com/linux/keys/1password.asc | \
    sudo gpg --dearmor --output /usr/share/keyrings/1password-archive-keyring.gpg

# 添加 1Password APT 仓库
echo "📦 添加 1Password APT 仓库..."
echo "deb [arch=${ARCH} signed-by=/usr/share/keyrings/1password-archive-keyring.gpg] https://downloads.1password.com/linux/debian/$(dpkg --print-architecture) stable main" | \
    sudo tee /etc/apt/sources.list.d/1password.list

# 设置仓库优先级
echo "🔧 设置仓库优先级..."
sudo mkdir -p /etc/apt/preferences.d/
echo -e "Package: *\nPin: origin downloads.1password.com\nPin-Priority: 1001" | \
    sudo tee /etc/apt/preferences.d/1password

# 更新包列表并安装
echo "🔄 更新包列表..."
sudo apt update

echo "📦 安装 1Password CLI..."
sudo apt install -y 1password-cli

# 验证安装
if command -v op >/dev/null 2>&1; then
    echo "✅ 1Password CLI 安装成功: $(op --version)"
else
    echo "❌ 1Password CLI 安装失败"
    exit 1
fi

{{- else }}
echo "ℹ️  macOS 上的 1Password CLI 通过 Homebrew 安装 (brew bundle install)"
{{- end }}
{{- else }}
echo "ℹ️  1Password 功能已禁用，跳过 CLI 安装"
{{- end }}