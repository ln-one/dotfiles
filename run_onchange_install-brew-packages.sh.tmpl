#!/bin/bash
# ========================================
# Homebrew Package Installation Script
# ========================================
# Use Brewfile to install and manage packages

set -euo pipefail

echo "ğŸº Installing Homebrew packages..."

# Brewfile path
BREWFILE_PATH="{{ .chezmoi.homeDir }}/Brewfile"

# Check if Brewfile exists, generate from template if not
if [[ ! -f "$BREWFILE_PATH" ]]; then
    echo "ğŸ“ Brewfile not found, generating from template..."
    chezmoi execute-template < "{{ .chezmoi.sourceDir }}/Brewfile.tmpl" > "$BREWFILE_PATH"
    echo "âœ… Brewfile generated: $BREWFILE_PATH"
fi

echo "ğŸ“‹ Using Brewfile: $BREWFILE_PATH"

# Run brew bundle install
echo "âš¡ Running brew bundle install..."
brew bundle install --file="$BREWFILE_PATH"

echo "ğŸ‰ Homebrew package installation complete!"